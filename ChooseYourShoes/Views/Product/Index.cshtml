@model IEnumerable<ChooseYourShoes.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Product Monitoring</h2>

<p>
    @Html.ActionLink("Add Product", "Create")
</p>
<table class="table table-bordered table-condensed" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductNm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.Id)
                        @Html.ActionLink(item.ProductNm, "Details", "Product", new { id = item.Id }, new { })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockAvailable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDesc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No items available.</td>
            </tr>
        }
    </tbody> 
</table>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
