@model IEnumerable<ChooseYourShoes.Models.Orders>

@{
    ViewBag.Title = "Index";
}

<h2>Pending Orders</h2>

@*<p>
    @Html.ActionLink("Create New", "RequestForm")
</p>*@
<br/>
<table class="table table-bordered table-condensed" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestorNm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.OrderId, "Details", "Order", new { referenceid = item.Id }, new { })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestorNm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationDesc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditForm", new { referenceid = item.Id }) |
                        @Html.ActionLink("Release", "ReleaseForm", new { referenceid = item.Id })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No items available.</td>
            </tr>
        }
    </tbody>

</table> 

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript"> 
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>